<h1>Welcome to the Forum</h1>
<% posts.forEach(post => { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p>Likes: <%= post.likes %></p>
    <form action="/posts/like/<%= post._id %>" method="POST">
      <button type="submit">Like</button>
    </form>
  </div>
<% }) %>
